<div class="modal fade" id="myMatch" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">매칭</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              <form>
                  <div class="text-left">
                    <div class="row">
                        <div class="col-md-2">
                            <b>이름:</b><br><p id="Name"></p>
                        </div>
                        <div class="col-md-5">
                            <b>이메일:</b><br><p id="Email"></p>
                        </div>
                        <div class="col-md-5">
                            <b>전화번호:</b></br><p id="Tel"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <b>대학:</b><br><p id="Course"></p>
                        </div>
                        <div class="col-md-5">
                            <b>학부:</b><br><p id="Colleage"></p>
                        </div>
                        <div class="col-md-5">
                            <b>학과:</b></br><p id="Major"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <b>보유 자격증:</b><div id="License"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <b>자기소개:</b><br><textarea id="Content" style="width:100%" rows="4" disabled></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 m-img">
                            <b>사진:</b><br><div id="img"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 m-img">
                            <b>우대조건:</b><br><div id="Prefer"></div>
                        </div>
                    </div>
                  </div>
               </form>
            </div>
            <div class="modal-footer mx-auto">
                <a class="btn btn-success mr-3" href="">승인</a>
                <a class="btn btn-danger" href="">거절</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        var name = $("#Name");
        var email = $("#Email");
        var tel = $("#Tel");
        var course = $("#Course");
        var colleage = $("#Colleage");
        var major = $("#Major");
        var license = $("#License");
        var content = $("#Content");
        var img = $("#img");
        var prefer = $("#prefer");

        var apps, users, licenses, imgs, prefers;
