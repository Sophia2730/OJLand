                                  license.append("<a class='btn btn-primary text-white m-2'>" + licenses + "</a>");

                              imgs = users[j].imageUrl.split('%&');
                              if (Array.isArray(imgs)) {
                                  for (var k = 0; k < imgs.length; k++) {
                                      img.append("<img src='uploads/" + imgs[k] + "' class='mr-3'></img>");
                                  }
                              } else if (imgs)
                                  img.append("<img src='uploads/" + imgs + "' class='mr-3'></img>");

                              prefers = users[j].Preference.split('%&');
                              if (Array.isArray(prefers)) {
                                  for (var k = 0; k < prefers.length; k++) {
                                      img.append("<input type='checkbox' value='" + prefers[k] + "' class='mb-2' checked disabled></input>");
