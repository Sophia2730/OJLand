<!DOCTYPE html>
<html>
  <head>
      <% include ./header.ejs %>
      <style>
          .container {
              position: relative;
              top:65px;
              left:55px;
          }
          #category {
              margin-bottom: 20px;
          }
          #header div:nth-child(n+2) {
              border: solid 1px #aaa;
          }
          #data {
            padding: 10px auto;
          }
          #data div:nth-child(n+2) {
            border: solid 1px #ccc;
            padding: 10px auto !important;
            vertical-align: middle;
          }
          #data p, #data a {
              display: block;
              margin-top: 1rem;
          }
      </style>
  </head>
  <body class="fixed-nav sidenav-toggled" id="page-top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
          <% include ./admin-nav.ejs %>
      </nav>
      <div class="container">
          <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-2 mx-3">
                  <h1><strong>회원관리</strong></h1>
              </div>
          </div>
          <div class="row" id="category">
              <div class="col-md-1"></div>
              <div class="col-md-1 mx-4">
                  <label for="type">구분:</label>
                  <select class="" name="type">
                      <option value="ALL">전체</option>
                      <option value="ER">발주자</option>
                      <option value="EE">수주자</option>
                  </select>
              </div>
          </div>
          <div id="header" class="row  text-center mx-4">
              <div class="col-md-1"></div>
              <div class="col-md-1">
                  <strong>No.</strong>
              </div>
              <div class="col-md-1">
                  <strong>구분</strong>
              </div>
              <div class="col-md-1">
                  <strong>이름</strong>
              </div>
              <div class="col-md-3">
                  <strong>이메일</strong>
              </div>
              <div class="col-md-1">
                  <strong>나이</strong>
              </div>
              <div class="col-md-1">
                  <strong>관리</strong>
              </div>
          </div>
          <% for (var i = data.length - 1; i > -1; i--) { %>
            <div id="data" class="row  text-center mx-4">
                <div class="col-md-1"></div>
                <div class="col-md-1">
                    <p><%= i+1 %></p>
                </div>
                <div class="col-md-1">
                    <p>
                        <% if(data[i].UserType == 'EE') { %>수주자<% } %>
                        <% if(data[i].UserType == 'ER') { %>발주자<% } %>
                    </p>
                </div>
                <div class="col-md-1">
                    <a id="<%= data._OID %>" href=""><%= data[i].Name %></a>
                </div>
                <div class="col-md-3">
                    <p><%= data[i].Email %></p>
                </div>
                <div class="col-md-1">
                    <p><%= age[i] %></p>
                </div>
                <div class="col-md-1">
                    <p><a class="btn btn-danger" id="<%= data._OID %>" href="">삭제</a></p>
                </div>
            </div>
          <% } %>
      </div>
  </body>
</html>
