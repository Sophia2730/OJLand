<!DOCTYPE html>
<html>
  <head>
      <% include ./header.ejs %>
  </head>
  <body class="fixed-nav sidenav-toggled" id="page-top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
          <% include ./admin-nav.ejs %>
      </nav>
      <div class="container">
          <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-2 mx-3">
                  <h1><strong>발주관리</strong></h1>
              </div>
          </div>
          <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-1 mx-4">
                  <label for="category">카테고리:</label>
                  <select class="" name="category">
                      <option value="ALL">전체</option>
                      <option value="PLA">기획</option>
                      <option value="DEV">개발</option>
                      <option value="DES">디자인</option>
                      <option value="TRA">번역</option>
                      <option value="SOU">사운드</option>
                      <option value="VIE">영상</option>
                      <option value="ETC">기타</option>
                  </select>
              </div>
          </div>
          <div id="header" class="row  text-center mx-4">
              <div class="col-md-1"></div>
              <div class="col-md-1">
                  <strong>No.</strong>
              </div>
              <div class="col-md-1">
                  <strong>카테고리</strong>
              </div>
              <div class="col-md-1">
                  <strong>상태</strong>
              </div>
              <div class="col-md-3">
                  <strong>제목</strong>
              </div>
              <div class="col-md-1">
                  <strong>발주자</strong>
              </div>
              <div class="col-md-1">
                  <strong>인원</strong>
              </div>
              <div class="col-md-1">
                  <strong>게시일</strong>
              </div>
              <div class="col-md-1">
                  <strong>관리</strong>
              </div>
          </div>
            <div id="header" class="row  text-center mx-4">
                <div class="col-md-1"></div>
                <div class="col-md-1">
                    <p><%= 1 %></p>
                </div>
                <div class="col-md-1">
                    <p><%= data.Category %></p>
                </div>
                <div class="col-md-1">
                    <p><%= data.Status %></p>
                </div>
                <div class="col-md-3">
                    <p><%= data.Title %></p>
                </div>
                <div class="col-md-1">
                    <p><%= Name %></p>
                </div>
                <div class="col-md-1">
                    <p><%= reqNum %>/<%= data.MaxNum %></p>
                </div>
                <div class="col-md-1">
                    <p><%= date %></p>
                </div>
                <div class="col-md-1">
                    <p><a class="btn btn-danger" id="<%= data._OID %>" href="">삭제</a></p>
                </div>
            </div>
      </div>
  </body>
</html>
