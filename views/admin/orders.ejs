<!DOCTYPE html>
<html>
  <head>
      <% include ../nav/header.ejs %>
  </head>
  <style>
      td {
          vertical-align: middle !important;
      }
  </style>
  <body class="fixed-nav sidenav-toggled" id="page-top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
          <% include ../nav/nav-admin.ejs %>
      </nav>
      <div class="container-fluid">
          <div class="card mb-3 mt-3">
              <div class="card-header"><h3>발주관리</h3></div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>카테고리</th>
                        <th>제목</th>
                        <th>발주자</th>
                        <th>상태</th>
                        <th>인원</th>
                        <th>게시일</th>
                        <th>관리</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i = 0; i < data.length; i++) { %>
                      <tr class="text-center">
                        <td><%= i + 1 %></td>
                        <td><%= data[i].Category %></td>
                        <td><a href="/info/<%= data[i]._OID %>"><%= data[i].Title %></a></td>
                        <td><%= name[i] %></td>
                        <td>
                            <%if(data[i].Status == 'A'){ %>모집중<% } %>
                            <%if(data[i].Status == 'B'){ %>매칭중<% } %>
                            <%if(data[i].Status == 'C'){ %>매칭완료<% } %>
                            <%if(data[i].Status == 'D'){ %>외주완료<% } %>
                        </td>
                        <td><%= reqNum %>/<%= data[i].MaxNum %></td>
                        <td><%= date[i] %></td>
                        <td class="p-0">
                            <form action="/orders/<%= data[i]._OID %>?_method=DELETE" method="post">
                                <input type="submit" class="btn btn-danger" value="삭제" />
                            </form>
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
          </div>
      </div>
      <script>
          $("input[type=submit]").on('click', function(e) {
              var answer = confirm('정말로 삭제하시겠습니까?');
              if (!answer)
                e.preventDefault();
          });
      </script>
  </body>
</html>
